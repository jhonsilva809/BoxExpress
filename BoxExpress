    <!-- JavaScript para el menú hamburguesa y el nuevo formulario -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // --- Lógica del Menú Hamburguesa ---
            const menuToggle = document.querySelector('.menu-toggle');
            const mainNav = document.getElementById('mainNav');
            const navLinks = mainNav.querySelectorAll('a');

            menuToggle.addEventListener('click', function() {
                mainNav.classList.toggle('active');
            });

            navLinks.forEach(link => {
                link.addEventListener('click', function() {
                    if (mainNav.classList.contains('active')) {
                        mainNav.classList.remove('active');
                    }
                });
            });

            // --- Lógica del Nuevo Formulario ---
            // Lista de departamentos y provincias de Perú
            const departamentos = {
              "Amazonas": ["Chachapoyas", "Bagua", "Bongará", "Condorcanqui", "Luya", "Rodríguez de Mendoza", "Utcubamba"],
              "Áncash": ["Huaraz", "Aija", "Antonio Raymondi", "Asunción", "Bolognesi", "Carhuaz", "Carlos Fermín Fitzcarrald", "Casma", "Corongo", "Huari", "Huarmey", "Huaylas", "Mariscal Luzuriaga", "Ocros", "Pallasca", "Pomabamba", "Recuay", "Santa", "Sihuas", "Yungay"],
              "Apurímac": ["Abancay", "Andahuaylas", "Antabamba", "Aymaraes", "Cotabambas", "Chincheros", "Grau"],
              "Arequipa": ["Arequipa", "Camana", "Caraveli", "Castilla", "Caylloma", "Condesuyos", "Islay", "La Unión"],
              "Ayacucho": ["Huamanga", "Cangallo", "Huanca Sancos", "Huanta", "La Mar", "Lucanas", "Parinacochas", "Páucar del Sara Sara", "Sucre", "Víctor Fajardo", "Vilcas Huamán"],
              "Cajamarca": ["Cajamarca", "Cajabamba", "Celendín", "Chota", "Contumazá", "Cutervo", "Hualgayoc", "Jaén", "San Ignacio", "San Marcos", "San Miguel", "San Pablo", "Santa Cruz"],
              "Callao": ["Callao"],
              "Cusco": ["Cusco", "Acomayo", "Anta", "Calca", "Canas", "Canchis", "Chumbivilcas", "Espinar", "La Convención", "Paruro", "Paucartambo", "Quispicanchi", "Urubamba"],
              "Huancavelica": ["Huancavelica", "Acobamba", "Angaraes", "Castrovirreyna", "Churcampa", "Huaytará", "Tayacaja"],
              "Huánuco": ["Huánuco", "Ambo", "Dos de Mayo", "Huacaybamba", "Huamalíes", "Leoncio Prado", "Marañón", "Pachitea", "Puerto Inca", "Lauricocha", "Yarowilca"],
              "Ica": ["Ica", "Chincha", "Nazca", "Palpa", "Pisco"],
              "Junín": ["Huancayo", "Concepción", "Chanchamayo", "Jauja", "Junín", "Satipo", "Tarma", "Yauli", "Chupaca"],
              "La Libertad": ["Trujillo", "Ascope", "Bolívar", "Chepén", "Julcán", "Otuzco", "Pacasmayo", "Pataz", "Sánchez Carrión", "Santiago de Chuco", "Gran Chimú", "Virú"],
              "Lambayeque": ["Chiclayo", "Ferreñafe", "Lambayeque"],
              "Lima": ["Lima", "Barranca", "Cajatambo", "Canta", "Cañete", "Huaral", "Huarochirí", "Huaura", "Oyón", "Yauyos"],
              "Loreto": ["Maynas", "Alto Amazonas", "Datem del Marañón", "Loreto", "Mariscal Ramón Castilla", "Putumayo", "Requena", "Ucayali"],
              "Madre de Dios": ["Tambopata", "Manu", "Tahuamanu"],
              "Moquegua": ["Mariscal Nieto", "General Sánchez Cerro", "Ilo"],
              "Pasco": ["Pasco", "Daniel Alcides Carrión", "Oxapampa"],
              "Piura": ["Piura", "Ayabaca", "Huancabamba", "Morropón", "Paita", "Sullana", "Talara", "Sechura"],
              "Puno": ["Puno", "Azángaro", "Carabaya", "Chucuito", "El Collao", "Huancané", "Lampa", "Melgar", "Moho", "San Antonio de Putina", "San Román", "Sandia", "Yunguyo"],
              "San Martín": ["Moyobamba", "Bellavista", "El Dorado", "Huallaga", "Lamas", "Mariscal Cáceres", "Picota", "Rioja", "San Martín", "Tocache"],
              "Tacna": ["Tacna", "Candarave", "Jorge Basadre", "Tarata"],
              "Tumbes": ["Tumbes", "Contralmirante Villar", "Zarumilla"],
              "Ucayali": ["Coronel Portillo", "Atalaya", "Padre Abad", "Purús"]
            };

            // Cargar departamentos
            const depSelect = document.getElementById("departamento");
            const provSelect = document.getElementById("provincia");
            const responseMessage = document.getElementById("responseMessage");

            for (let dep in departamentos) {
              let option = document.createElement("option");
              option.value = dep;
              option.textContent = dep;
              depSelect.appendChild(option);
            }

            // Cambiar provincias al seleccionar departamento
            depSelect.addEventListener("change", function() {
              provSelect.innerHTML = ""; // Limpiar provincias anteriores
              const selectedDep = this.value;
              if (departamentos[selectedDep]) {
                departamentos[selectedDep].forEach(prov => {
                  let option = document.createElement("option");
                  option.value = prov;
                  option.textContent = prov;
                  provSelect.appendChild(option);
                });
              }
            });

            // Seleccionar el primero por defecto y disparar el evento change para cargar provincias iniciales
            if (depSelect.options.length > 0) {
                depSelect.selectedIndex = 0;
                depSelect.dispatchEvent(new Event("change"));
            }


            // Enviar formulario
            document.getElementById("orderForm").addEventListener("submit", function(e){
              e.preventDefault();

              const form = e.target;
              const formData = new FormData(form);

              // Limpiar mensajes anteriores
              responseMessage.classList.add("hidden");
              responseMessage.classList.remove("bg-green-100", "text-green-800", "border", "border-green-400", "bg-red-100", "text-red-800", "border-red-400");
              responseMessage.innerHTML = "";

              fetch("https://script.google.com/macros/s/AKfycbzSXz7BBLHY6AO4oQXj_QDJKLTdTZ0s6QL-n0SO5HmMhs9_URVMnEgVuqfiY8QafLZIWg/exec", {
                method: "POST",
                body: formData
              })
              .then(res => res.json())
              .then(data => {
                responseMessage.classList.remove("hidden");
                responseMessage.classList.add("bg-green-100", "text-green-800", "border", "border-green-400");
                responseMessage.innerHTML = "✅ Pedido registrado correctamente. Pronto nos pondremos en contacto contigo.";
                form.reset();
                // Restablecer selects de departamento/provincia
                if (depSelect.options.length > 0) {
                    depSelect.selectedIndex = 0;
                    depSelect.dispatchEvent(new Event("change"));
                }
              })
              .catch(err => {
                responseMessage.classList.remove("hidden");
                responseMessage.classList.add("bg-red-100", "text-red-800", "border", "border-red-400");
                responseMessage.innerHTML = "❌ Error al enviar el pedido. Intenta nuevamente.";
                console.error(err);
              });
            });
        });
    </script>
